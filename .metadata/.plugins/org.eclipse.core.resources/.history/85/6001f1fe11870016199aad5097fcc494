package basicTools.Fraction;

public abstract class Fraction {
	
	    // Fields
		Number numerator;
		Number denominator;
		double value;
		
		// Constructor
		public Fraction(Number numerator, Number denominator) {
			this.numerator = numerator;
			this.denominator = denominator;
			
			calculateValue();
			
		};
		
		abstract double calculateValue();
		
		/*
		 * Basic Numerical Methods
		 */
		
		public abstract Fraction multiply(IntegerFraction x);
		
		public abstract Fraction add(IntegerFraction x);
		
		public abstract Fraction add(int x);
		
		public abstract void invert();
		
		/*
		 * Utility method
		 */
		
		public void print() {
			System.out.println(this.numerator);
			System.out.println("-------");
			System.out.println(this.denominator);
		}
}
